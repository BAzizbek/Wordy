<ol class="list-group list-group-numbered">
    <h2 class="h2 text-center">{{type}}</h2>
    {{#each defs}}
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                {{#if this.partOfSpeech}}
                    <div id="speech" class="fw-bold">
                        {{ this.definition }}
                    </div>
                    <div>
                        {{ this.partOfSpeech }}
                    </div>
                {{else}}
                    <div id="speech" class="fw-bold">
                        {{ this }}
                    </div>
                {{/if}}
            </div>
            <button id="myvoice" type="button" class="btn btn-primary">
                <i class="bi bi-megaphone"></i>
            </button>
        </li>
    {{/each}}
</ol>
